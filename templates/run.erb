<%-
fields = @fields
if fields
  extra_fields = fields.map { |k,v| "--field '" + k + "=" + v + "'" }.join(" ")
else
  extra_fields = ''
end
-%>
#!/bin/sh
exec 2>&1
exec /opt/lumberjack/bin/lumberjack.sh --host <%= @host %> --port <%= @port %> --ssl-ca-path /etc/lumberjack/<%= @name %>/ca.crt <%= extra_fields %> <%= @logfiles %>
